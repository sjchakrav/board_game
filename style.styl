@import 'stylus/reset.styl'
@import 'stylus/vars.styl'
@import 'stylus/mixins.styl'

section-color-state($color)
  background $color
  &:hover
    background darken($color, 10%)
  &:not(:last-child)
    &:after
      border-color $color
    &:hover:after
      border-color darken($color, 10%)

body
  background #424242
  font-family 'Montserrat', sans-serif
  h1, h2
    color #fff
    text-align center
  h1
    font-size 2rem
    margin-bottom $space
    font-weight 400
  a
    color primary

.app-container
  padding $space * 3
  position relative
  min-width 1100px

.board
  /*background gray*/
  border $space solid background-board
  transform perspective(2000px) rotateX(40deg) translateY(-200px)
  width 80%
  margin-left auto
  margin-right auto
  border-radius 50px
  overflow hidden

  .side, .top, .bottom
    position relative
    /*padding $space*/
    background-color background-board
    font-size 0
  .top, .bottom
    section
      display: inline-block
      width size
      &:not(:last-child):after
        border-left size-arrow solid background-default
        border-top size-arrow solid transparent !important
        border-bottom size-arrow solid transparent !important
        border-right none !important
        right - size-arrow
        top 50%
        transform translateY(-50%)
  .top
   border-bottom $space solid background-board
  .bottom
   border-top $space solid background-board
   margin-top - $space
  .sides
    clearfix()
    margin-top - $space
    position relative
    z-index 1

  .side
    &.left
      float left
      border-right $space solid background-board
    &.right
      border-left $space solid background-board
      float right
      section
        &:not(:last-child):after
          border-top size-arrow solid background-default
          border-left size-arrow solid transparent !important
          border-right size-arrow solid transparent !important
          border-bottom none !important
          bottom - size-arrow
          left 50%
          transform translateX(-50%)


  section
    section-color-state(background-default)
    padding 10px 0
    min-width 120px
    height 100px
    text-align center
    cursor: pointer
    position relative
    font-size size

    .place, .price
      font-size .75rem
    .fa
      font-size 2.5rem
      padding $space 0

    &:not(:last-child):after
      content ''
      position absolute
      z-index 10

    &:nth-child(odd)
      section-color-state(darken(background-default, 20%))
    &.active
      section-color-state(background-active)
    &.start
      section-color-state(background-start)
    &.end
      section-color-state(background-end)
    &.danger
      section-color-state(background-danger)

.vertical2
  background-color red
  transform: rotate(90deg)
  position: absolute;
  top: 400px;
  right: -250px


.modal
  display none
  position absolute
  top 0
  right 0
  left 0
  bottom 0

.modal-content
  position absolute
  top 6rem
  left 50%
  width 40%
  transform translateX(-50%)
  background white
  height 50%
  padding $space

